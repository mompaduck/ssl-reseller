
{

"name": "ssl-reseller",

"private": true,

"dependencies": {

"@hotwired/stimulus": "^3.2.2",

"@hotwired/turbo-rails": "^8.0.20",

"esbuild": "^0.25.12",

"tailwindcss": "^3.4.14",

"autoprefixer": "^10.4.19",

"postcss": "^8.4.38"

},

"scripts": {

"build": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds",

"build:watch": "esbuild app/javascript/application.js --bundle --watch --sourcemap --outdir=app/assets/builds",

"css:build": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css --minify",

"css:watch": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css --watch"

}

}


