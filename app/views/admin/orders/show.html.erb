<div class="mb-6 flex items-center justify-between">
  <div class="flex items-center gap-4">
    <%= link_to admin_orders_path, class: "p-2 rounded-lg hover:bg-gray-200 text-gray-500 transition" do %>
      <i data-lucide="arrow-left" class="w-5 h-5"></i>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold text-gray-900">주문 상세 #<%= @order.internal_order_id || @order.id %></h1>
      <p class="mt-1 text-sm text-gray-500">주문 일시: <%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
    </div>
  </div>
  
  <div class="flex gap-2">
    <% if @order.status == 'paid' %>
      <button class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 shadow-sm transition flex items-center gap-2">
        <i data-lucide="send" class="w-4 h-4"></i>
        발급 요청 (API)
      </button>
    <% end %>
    <button class="px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 shadow-sm transition flex items-center gap-2">
      <i data-lucide="printer" class="w-4 h-4"></i>
      인쇄
    </button>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Left Column: Order Info -->
  <div class="lg:col-span-2 space-y-6">
    
    <!-- Order Details -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
        <i data-lucide="file-text" class="w-5 h-5 text-gray-400"></i>
        주문 정보
      </h2>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6">
        <div>
          <dt class="text-sm font-medium text-gray-500">상품명</dt>
          <dd class="mt-1 text-sm text-gray-900 font-semibold"><%= @order.product.name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">도메인</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono bg-gray-50 inline-block px-2 py-1 rounded"><%= @order.domain %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">기간</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @order.product.duration_months %>개월</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">결제 금액</dt>
          <dd class="mt-1 text-sm text-gray-900 font-bold">₩<%= number_to_currency(@order.total_price, unit: "", precision: 0) %></dd>
        </div>
      </dl>
    </div>

    <!-- Applicant Info -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
        <i data-lucide="user" class="w-5 h-5 text-gray-400"></i>
        신청자 정보
      </h2>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6">
        <div>
          <dt class="text-sm font-medium text-gray-500">이름 (한글)</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @order.name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">이름 (영문)</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @order.english_name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">회사명</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @order.company_name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">전화번호</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @order.phone %></dd>
        </div>
        <div class="col-span-2">
          <dt class="text-sm font-medium text-gray-500">이메일</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @order.user.email %></dd>
        </div>
      </dl>
    </div>
    
    <!-- CSR Info -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
        <i data-lucide="code" class="w-5 h-5 text-gray-400"></i>
        CSR 정보
      </h2>
      <div class="bg-gray-900 rounded-lg p-4 overflow-x-auto">
        <pre class="text-xs text-green-400 font-mono"><%= @order.csr %></pre>
      </div>
    </div>

  </div>

  <!-- Right Column: Status & Actions -->
  <div class="lg:col-span-1 space-y-6">
    
    <!-- Status Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-4">주문 상태</h2>
      
      <div class="flex items-center justify-between mb-6">
        <span class="text-sm text-gray-500">현재 상태</span>
        <% status_colors = {
          'pending' => 'bg-yellow-100 text-yellow-800',
          'paid' => 'bg-green-100 text-green-800',
          'issued' => 'bg-blue-100 text-blue-800',
          'canceled' => 'bg-red-100 text-red-800',
          'refunded' => 'bg-gray-100 text-gray-800'
        } %>
        <span class="px-3 py-1 text-sm font-bold rounded-full <%= status_colors[@order.status] %>">
          <%= @order.status.upcase %>
        </span>
      </div>

      <div class="space-y-3 pt-4 border-t border-gray-100">
        <% if current_user.can_edit_orders? %>
          <h3 class="text-sm font-medium text-gray-900">상태 변경</h3>
          <div class="grid grid-cols-2 gap-2">
            <%= button_to "Pending", update_status_admin_order_path(@order, status: 'pending'), method: :patch, class: "w-full px-3 py-2 bg-yellow-50 border border-yellow-200 rounded text-xs font-medium hover:bg-yellow-100 text-yellow-800 transition", form: { class: 'w-full' } %>
            <%= button_to "Paid", update_status_admin_order_path(@order, status: 'paid'), method: :patch, class: "w-full px-3 py-2 bg-green-50 border border-green-200 rounded text-xs font-medium hover:bg-green-100 text-green-800 transition", form: { class: 'w-full' } %>
            <%= button_to "Issued", update_status_admin_order_path(@order, status: 'issued'), method: :patch, class: "w-full px-3 py-2 bg-blue-50 border border-blue-200 rounded text-xs font-medium hover:bg-blue-100 text-blue-800 transition", form: { class: 'w-full' } %>
            <%= button_to "Cancel", update_status_admin_order_path(@order, status: 'canceled'), method: :patch, class: "w-full px-3 py-2 bg-red-50 border border-red-200 rounded text-xs font-medium hover:bg-red-100 text-red-800 transition", data: { turbo_confirm: "정말 주문을 취소하시겠습니까?" }, form: { class: 'w-full' } %>
          </div>
        <% else %>
          <p class="text-xs text-gray-500 italic">상태 변경 권한이 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- Partner API Info -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-4">API 연동 정보</h2>
      <div class="space-y-4">
        <div>
          <p class="text-xs text-gray-500">생성일</p>
          <p class="text-sm text-gray-900"><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></p>
        </div>
        <div>
          <p class="text-xs text-gray-500">최종 수정</p>
          <p class="text-sm text-gray-900"><%= @order.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
        </div>
      </div>
    </div>

  </div>
</div>
