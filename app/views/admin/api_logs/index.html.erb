<div class="mb-8">
  <h1 class="text-2xl font-bold text-gray-900">API Logs (Sectigo)</h1>
  <p class="mt-1 text-sm text-gray-500">Sectigo API 호출 이력을 확인합니다.</p>
</div>

<!-- Filters -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
  <%= form_with url: admin_api_logs_path, method: :get, class: "space-y-4" do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <%= f.label :q, "검색", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :q, value: params[:q], placeholder: "주문번호, 상태...", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
      </div>

      <div>
        <%= f.label :status, "상태", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status, options_for_select([["전체", ""]] + @statuses.map { |s| [s, s] }, params[:status]), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
      </div>

      <div class="grid grid-cols-2 gap-2">
        <div>
          <%= f.label :start_date, "시작일", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :start_date, value: params[:start_date], class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>
        <div>
          <%= f.label :end_date, "종료일", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :end_date, value: params[:end_date], class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>
      </div>
    </div>

    <div class="flex gap-2">
      <%= f.submit "필터 적용", class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium" %>
      <%= link_to "초기화", admin_api_logs_path, class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors text-sm font-medium" %>
    </div>
  <% end %>
</div>

<!-- Results -->
<div class="mb-4 text-sm text-gray-600">
  총 <%= @api_logs.total_count %>개의 로그
</div>

<!-- Table -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">시간</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">주문</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">상태</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">요청</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">응답</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @api_logs.any? %>
          <% @api_logs.each do |log| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= log.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if log.order %>
                  <%= link_to "##{log.order.order_number}", admin_order_path(log.order), class: "text-blue-600 hover:text-blue-900" %>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full <%= log.badge_color %>">
                  <%= log.status || 'Unknown' %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm">
                <% if log.request_body.present? %>
                  <details>
                    <summary class="text-blue-600 cursor-pointer hover:text-blue-800">요청 데이터</summary>
                    <pre class="mt-2 text-xs bg-gray-50 p-2 rounded border overflow-x-auto max-w-md"><%= JSON.pretty_generate(JSON.parse(log.request_body)) rescue log.request_body %></pre>
                  </details>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm">
                <% if log.response_body.present? %>
                  <details>
                    <summary class="text-blue-600 cursor-pointer hover:text-blue-800">응답 데이터</summary>
                    <pre class="mt-2 text-xs bg-gray-50 p-2 rounded border overflow-x-auto max-w-md"><%= JSON.pretty_generate(JSON.parse(log.response_body)) rescue log.response_body %></pre>
                  </details>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="px-6 py-12 text-center text-gray-500">로그가 없습니다.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @api_logs.total_pages > 1 %>
    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
      <%= paginate @api_logs %>
    </div>
  <% end %>
</div>
