<div class="mb-8 flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">사용자 관리</h1>
    <p class="mt-1 text-sm text-gray-500">플랫폼 사용자 및 권한을 관리합니다. (총 <%= User.count %>명)</p>
  </div>
</div>

<!-- Search & Filter -->
<div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 mb-6">
  <%= form_tag admin_users_path, method: :get, id: "filter-form" do %>
    <!-- Search Row -->
    <div class="flex gap-3 mb-4">
      <div class="flex-1 relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <i data-lucide="search" class="w-5 h-5 text-gray-400"></i>
        </div>
        <%= text_field_tag :q, params[:q], 
            placeholder: "이름, 이메일, 회사명 검색...", 
            class: "pl-10 block w-full h-11 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      
      <button type="submit" class="px-6 h-11 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 shadow-sm transition flex items-center gap-2">
        <i data-lucide="search" class="w-4 h-4"></i>
        검색
      </button>
      
      <%= link_to admin_users_path, class: "px-6 h-11 bg-white border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 shadow-sm transition flex items-center gap-2" do %>
        <i data-lucide="x" class="w-4 h-4"></i>
        초기화
      <% end %>
    </div>
    
    <!-- Filter Row -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
      <div>
        <label class="block text-xs font-medium text-gray-700 mb-1">역할</label>
        <%= select_tag :role, 
            options_for_select([
              ['전체', ''],
              ['사용자', 'user'],
              ['파트너', 'partner'],
              ['지원팀', 'support'],
              ['관리자', 'admin'],
              ['슈퍼관리자', 'super_admin']
            ], params[:role]),
            class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
            onchange: "this.form.submit()" %>
      </div>
      
      <div>
        <label class="block text-xs font-medium text-gray-700 mb-1">상태</label>
        <%= select_tag :status,
            options_for_select([
              ['전체', ''],
              ['활성', 'active'],
              ['대기', 'pending'],
              ['정지', 'banned']
            ], params[:status]),
            class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
            onchange: "this.form.submit()" %>
      </div>
      
      <div>
        <label class="block text-xs font-medium text-gray-700 mb-1">정렬</label>
        <%= select_tag :sort,
            options_for_select([
              ['최근 가입순', 'created_desc'],
              ['이름순', 'name_asc'],
              ['이메일순', 'email_asc']
            ], params[:sort]),
            class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
            onchange: "this.form.submit()" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Users List Table -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_users_path(sort: params[:sort] == 'id_asc' ? 'id_desc' : 'id_asc', q: params[:q], role: params[:role], status: params[:status]), class: "flex items-center gap-1 hover:text-gray-700" do %>
              ID
              <% if params[:sort]&.start_with?('id') %>
                <i data-lucide="<%= params[:sort] == 'id_asc' ? 'chevron-up' : 'chevron-down' %>" class="w-4 h-4"></i>
              <% end %>
            <% end %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_users_path(sort: params[:sort] == 'name_asc' ? 'name_desc' : 'name_asc', q: params[:q], role: params[:role], status: params[:status]), class: "flex items-center gap-1 hover:text-gray-700" do %>
              사용자
              <% if params[:sort]&.start_with?('name') %>
                <i data-lucide="<%= params[:sort] == 'name_asc' ? 'chevron-up' : 'chevron-down' %>" class="w-4 h-4"></i>
              <% end %>
            <% end %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">전화번호</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_users_path(sort: params[:sort] == 'status_asc' ? 'status_desc' : 'status_asc', q: params[:q], role: params[:role], status: params[:status]), class: "flex items-center gap-1 hover:text-gray-700" do %>
              상태
              <% if params[:sort]&.start_with?('status') %>
                <i data-lucide="<%= params[:sort] == 'status_asc' ? 'chevron-up' : 'chevron-down' %>" class="w-4 h-4"></i>
              <% end %>
            <% end %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_users_path(sort: params[:sort] == 'role_asc' ? 'role_desc' : 'role_asc', q: params[:q], role: params[:role], status: params[:status]), class: "flex items-center gap-1 hover:text-gray-700" do %>
              역할
              <% if params[:sort]&.start_with?('role') %>
                <i data-lucide="<%= params[:sort] == 'role_asc' ? 'chevron-up' : 'chevron-down' %>" class="w-4 h-4"></i>
              <% end %>
            <% end %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">주문 수</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_users_path(sort: params[:sort] == 'created_asc' ? 'created_desc' : 'created_asc', q: params[:q], role: params[:role], status: params[:status]), class: "flex items-center gap-1 hover:text-gray-700" do %>
              가입일
              <% if params[:sort]&.start_with?('created') %>
                <i data-lucide="<%= params[:sort] == 'created_asc' ? 'chevron-up' : 'chevron-down' %>" class="w-4 h-4"></i>
              <% end %>
            <% end %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_users_path(sort: params[:sort] == 'last_sign_in_asc' ? 'last_sign_in_desc' : 'last_sign_in_asc', q: params[:q], role: params[:role], status: params[:status]), class: "flex items-center gap-1 hover:text-gray-700" do %>
              최근 로그인
              <% if params[:sort]&.start_with?('last_sign_in') %>
                <i data-lucide="<%= params[:sort] == 'last_sign_in_asc' ? 'chevron-up' : 'chevron-down' %>" class="w-4 h-4"></i>
              <% end %>
            <% end %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">관리</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
              #<%= user.id %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white font-bold">
                    <%= user.email.first(2).upcase %>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900"><%= user.name || "-" %></div>
                  <div class="text-sm text-gray-500"><%= user.email %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= user.phone || "-" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% status_colors = {
                'active' => 'bg-green-100 text-green-800',
                'pending' => 'bg-yellow-100 text-yellow-800',
                'banned' => 'bg-red-100 text-red-800'
              } %>
              <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_colors[user.status] %>">
                <%= user.status.upcase %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% role_colors = {
                'user' => 'bg-gray-100 text-gray-800',
                'partner' => 'bg-purple-100 text-purple-800',
                'support' => 'bg-green-100 text-green-800',
                'admin' => 'bg-blue-100 text-blue-800',
                'super_admin' => 'bg-red-100 text-red-800'
              } %>
              <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full <%= role_colors[user.role] %>">
                <%= user.role.upcase %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
              <%= user.orders.count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= user.created_at.strftime("%Y-%m-%d") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= user.current_sign_in_at&.strftime("%Y-%m-%d %H:%M") || "없음" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "상세", admin_user_path(user), class: "text-blue-600 hover:text-blue-900 bg-blue-50 hover:bg-blue-100 px-3 py-1.5 rounded-lg transition-colors" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
    <div class="text-sm text-gray-700">
      총 <span class="font-medium"><%= @users.total_count %></span>명
    </div>
    <div>
      <%= paginate @users %>
    </div>
  </div>
</div>
