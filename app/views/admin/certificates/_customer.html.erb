<%= turbo_frame_tag "certificate_tab_content" do %>
<div id="content-customer" class="tab-content">
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">

    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-bold text-gray-900 flex items-center gap-2">
        <i data-lucide="user" class="w-5 h-5 text-blue-600"></i>
        고객 정보 (Customer Information)
      </h2>

      <%= link_to admin_user_path(@certificate.user),
        class:"text-xs text-blue-600 hover:text-blue-800 flex items-center gap-1" do %>
        상세보기 <i data-lucide="external-link" class="w-3 h-3"></i>
      <% end %>
    </div>

    <div class="space-y-3 text-sm">

      <div>
        <p class="text-xs text-gray-500">User ID</p>
        <p class="font-semibold text-gray-900">#<%= @certificate.user.id %></p>
      </div>

      <div>
        <p class="text-xs text-gray-500">이름 / 이메일</p>
        <p class="font-semibold text-gray-900"><%= @certificate.user.name %></p>
        <p class="text-xs text-blue-600 font-mono"><%= @certificate.user.email %></p>
      </div>

      <div>
        <p class="text-xs text-gray-500">전화번호</p>
        <p class="font-medium text-gray-900"><%= @certificate.user.phone || "-" %></p>
      </div>

      <div>
        <p class="text-xs text-gray-500">국가</p>
        <p class="font-medium text-gray-900"><%= @certificate.user.country || "-" %></p>
      </div>

      <% if @certificate.order.company_name.present? %>
        <div>
          <p class="text-xs text-gray-500">회사명</p>
          <p class="font-medium text-gray-900"><%= @certificate.order.company_name %></p>
        </div>
      <% end %>

      <%# Quick Email %>
      <div class="pt-3 border-t">
        <a href="mailto:<%= @certificate.user.email %>"
          class="block px-3 py-2 text-center bg-blue-50 text-blue-700 rounded-lg text-xs font-medium hover:bg-blue-100 transition">
          <i data-lucide="mail" class="w-4 h-4 inline"></i> 이메일 보내기
        </a>
      </div>

      <%# Link to Billing & Order %>
      <div class="pt-3 border-t">
        <p class="text-xs text-gray-500 mb-2">주문 정보</p>
        <button onclick="switchTab('billing')" 
          class="w-full px-3 py-2 bg-purple-50 text-purple-700 rounded-lg text-xs font-medium hover:bg-purple-100 transition border border-purple-200">
          <i data-lucide="shopping-cart" class="w-3 h-3 inline mr-1"></i>
          Billing & Order 탭에서 확인
        </button>
      </div>

    </div>
  </div>
</div>
<% end %>
