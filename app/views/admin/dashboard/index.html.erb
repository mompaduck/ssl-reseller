<%= turbo_stream_from "dashboard_updates" %>

<div data-controller="realtime-dashboard">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">관리자 대시보드</h1>
    <p class="mt-1 text-sm text-gray-500">서비스 전체 현황을 실시간으로 확인하세요.</p>
  </div>

  <!-- Main Dashboard Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    
    <!-- Row 1: Order Summary & Certificate Status -->
    <div class="h-full">
      <%= render "admin/dashboard/order_summary_card" %>
    </div>
    
    <div class="h-full">
      <%= render "admin/dashboard/certificate_status_card" %>
    </div>

    <!-- Row 2: Ticket Status & System Alerts -->
    <div class="h-full">
      <%= render "admin/dashboard/ticket_status_card" %>
    </div>

    <div class="h-full">
      <%= render "admin/dashboard/system_alerts_card" %>
    </div>

    <!-- Row 3: Revenue Summary (Full Width) -->
    <div class="lg:col-span-2">
      <%= render "admin/dashboard/revenue_card" %>
    </div>

  </div>
</div>
