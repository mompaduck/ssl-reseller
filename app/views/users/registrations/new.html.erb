<%# app/views/users/registrations/new.html.erb %>

<div class="flex justify-center items-center min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">

    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-green-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white text-center">회원가입</h2>
      <p class="text-blue-100 text-center mt-2 text-sm">
        새로운 SSL 인증서 계정을 생성하세요
      </p>
    </div>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="mx-8 mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-sm text-blue-800"><%= notice %></p>
      </div>
    <% end %>

    <% if alert %>
      <div class="mx-8 mt-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-sm text-red-800"><%= alert %></p>
      </div>
    <% end %>

    <!-- Form -->
    <div class="px-8 py-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%# 이름 입력 %>
        <div>
          <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, autofocus: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" %>
        </div>

        <%# 이메일 입력 %>
        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autocomplete: "email", class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" %>
        </div>

        <%# 비밀번호 입력 %>
        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mb-1">
              (<%= @minimum_password_length %>자 이상 입력)
            </p>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" %>
        </div>

        <%# 비밀번호 확인 %>
        <div>
          <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" %>
        </div>

        <%# 회원가입 버튼 %>
        <div>
          <%= f.submit "회원가입", class: "w-full py-3 px-4 bg-gradient-to-r from-blue-600 to-green-600 text-white font-medium rounded-lg hover:opacity-90 transition cursor-pointer" %>
        </div>
      <% end %>

      <%# Divider %>
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">또는</span>
          </div>
        </div>
      </div>

      <%# 로그인 링크 %>
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          이미 계정이 있으신가요?
          <%= link_to "로그인", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
        </p>
      </div>
    </div>
  </div>
</div>

