<main class="min-h-screen bg-gradient-to-b from-indigo-50 to-white py-20 px-4">
  <div class="w-full max-w-md mx-auto bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 to-green-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white text-center">회원가입</h2>
      <p class="text-blue-100 text-center mt-2 text-sm">SSL 인증서 계정을 생성하세요</p>
    </div>

    <div class="px-8 py-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- 이름 -->
        <div>
          <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, autofocus: true, placeholder: "홍길동",
                class: "block w-full border border-gray-300 rounded-lg py-3 px-3 transition" %>
        </div>

        <!-- 이메일 -->
        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, placeholder: "you@example.com",
                class: "block w-full border border-gray-300 rounded-lg py-3 px-3 transition" %>
        </div>

        <!-- 비밀번호 -->
        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "8자 이상 입력",
                class: "block w-full border border-gray-300 rounded-lg py-3 px-3 transition" %>
        </div>

        <!-- 비밀번호 확인 -->
        <div>
          <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "비밀번호 재입력",
                class: "block w-full border border-gray-300 rounded-lg py-3 px-3 transition" %>
        </div>

        <!-- 약관 동의 -->
        <div class="flex items-center">
          <%= f.check_box :terms, required: true, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
          <label class="ml-2 text-sm text-gray-700">
            <%= link_to "이용약관", "#", class: "text-blue-600 hover:underline" %> 및
            <%= link_to "개인정보처리방침", "#", class: "text-blue-600 hover:underline" %>에 동의합니다.
          </label>
        </div>

        <!-- 회원가입 버튼 -->
        <div class="mt-6">
          <%= f.submit "회원가입",
                class: "w-full bg-gradient-to-r from-blue-600 to-green-600 text-white py-3 rounded-lg font-semibold hover:opacity-90 transition cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          이미 계정이 있으신가요?
          <%= link_to "로그인", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
        </p>
      </div>
    </div>
  </div>
</main>