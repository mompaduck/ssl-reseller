<main class="min-h-screen bg-gradient-to-b from-blue-50 to-white flex items-center justify-center py-16 px-4">
  <div class="w-full max-w-md">
    
    <!-- Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">

      <!-- Header -->
     <div class="bg-blue-600 px-6 py-5 text-white">
        <div class="flex items-center justify-center mb-2">
          <i data-lucide="lock" class="w-8 h-8"></i>
        </div>
        <h2 class="text-2xl font-bold text-center">
          회원가입
        </h2>
        <p class="text-blue-100 text-center mt-1 text-sm">
          안전한 SSL 인증서 관리 시스템
        </p>
      </div>

      <!-- Google Login -->
      <div class="px-6 py-4">

        <% if devise_mapping.omniauthable? %>
          <% resource_class.omniauth_providers.each do |provider| %>
            <%= link_to user_google_oauth2_omniauth_authorize_path,
              data: { turbo: false },
              method: :post,
              class: "w-full flex items-center justify-center px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 transition" do %>

              <svg class="w-5 h-5" viewBox="0 0 48 48">
                  <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path>
                  <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path>
                  <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.223,0-9.657-3.657-11.303-8H6.306C9.656,39.663,16.318,44,24,44z"></path>
                  <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571l6.19,5.238C42.021,35.596,44,30.138,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path>
                </svg>

              <span class="ml-3 text-sm font-medium text-gray-700">Google 계정으로 회원가입</span>
            <% end %>
          <% end %>
        <% end %>

      </div>

      <!-- Divider -->
      <div class="px-6 mt-4">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">또는</span>
          </div>
        </div>
      </div>

      <!-- Form Section -->
      <div class="px-6 py-6">

        <!-- Flash Messages -->
        <% if notice %>
          <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
            <p class="text-sm text-blue-800"><%= notice %></p>
          </div>
        <% end %>

        <% if alert %>
          <div class="mb-4 p-3 bg-red-50 border-l-4 border-red-500 rounded">
            <div class="flex items-center">
              <i data-lucide="alert-circle" class="w-5 h-5 text-red-500 mr-2"></i>
              <p class="text-sm text-red-800 font-semibold"><%= alert %></p>
            </div>
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
          html: {
            data: {
              controller: "email-check password-confirm field-validate",
              action: "submit->email-check#validateBeforeSubmit submit->password-confirm#validateBeforeSubmit"
            },
            class: "space-y-4"
          }) do |f| %>

          <!-- Email -->
          <div>
            <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <div class="flex gap-2">
              <%= f.email_field :email,
                placeholder: "you@example.com",
                data: { "email-check-target": "email", action: "input->email-check#resetChecked" },
                class: "flex-1 border border-gray-300 rounded-lg py-2.5 px-4 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>

              <button type="button"
              data-action="click->email-check#checkEmail"
              class="
                px-4 py-2 text-xs font-semibold rounded-lg
                bg-blue-600 text-white
                hover:bg-blue-700
                shadow-lg hover:shadow-xl
                transition transform hover:-translate-y-0.5
              ">
              중복확인
            </button>
            </div>
            <p data-email-check-target="message" class="text-sm mt-2 hidden"></p>
          </div>

          <!-- Password -->
          <div>
            <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password,
              placeholder: "6자 이상 입력",
              data: { "password-confirm-target": "password", action: "input->password-confirm#checkMatch" },
              class: "block w-full border border-gray-300 rounded-lg py-2.5 px-4 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>

            <% if @minimum_password_length %>
              <p class="text-xs text-gray-500 mt-1">최소 <%= @minimum_password_length %>자 이상</p>
            <% end %>
          </div>

          <!-- Password Confirm -->
          <div>
            <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password_confirmation,
              placeholder: "비밀번호 재입력",
              data: { "password-confirm-target": "passwordConfirmation", action: "input->password-confirm#checkMatch" },
              class: "block w-full border border-gray-300 rounded-lg py-2.5 px-4 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>

            <p data-password-confirm-target="message" class="text-sm mt-2 text-red-500 hidden">비밀번호가 일치하지 않습니다.</p>
          </div>

          <!-- Terms -->
          <div class="flex items-start pt-1">
            <%= f.check_box :terms, required: true, class: "h-4 w-4 text-blue-600 mt-1" %>
            <label class="ml-3 text-sm text-gray-700 leading-relaxed">
              <%= link_to "이용약관", "#", class: "text-blue-600 hover:underline" %> 및
              <%= link_to "개인정보처리방침", "#", class: "text-blue-600 hover:underline" %>에 동의합니다.
              <span class="text-red-500">*</span>
            </label>
          </div>

          <!-- Submit -->
          <div>
            <%= f.submit "회원가입",
              class: "w-full py-3 bg-blue-600 
              text-white text-base font-semibold rounded-lg hover:bg-blue-700 
              transition shadow-md cursor-pointer" %>
          </div>

        <% end %>

        <!-- Login Link -->
        <div class="mt-6 text-center pt-4 border-t border-gray-200">
          <p class="text-sm text-gray-600">
            이미 계정이 있으신가요?
            <%= link_to "로그인", new_session_path(resource_name), 
            class: "font-medium text-blue-600 hover:text-blue-700" %>
          </p>
        </div>

      </div>
    </div>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    lucide.createIcons();
  });
  
  document.addEventListener('turbo:load', () => {
    lucide.createIcons();
  });
</script>