<%# app/views/devise/registrations/new.html.erb %>

<main class="min-h-screen bg-gradient-to-b from-indigo-50 to-white flex justify-center items-center py-20 px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
    <div class="px-8 py-8">
      <h2 class="text-3xl font-bold text-indigo-700 mb-4 text-center">회원가입</h2>
      <p class="text-sm text-gray-600 text-center mb-6">SSL 인증서 계정을 생성하세요</p>

      <!-- Flash Messages -->
      <% if notice %>
        <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <p class="text-sm text-blue-800 font-medium"><%= notice %></p>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <p class="text-sm text-red-800 font-semibold"><%= alert %></p>
          </div>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
            html: {
              data: {
                controller: "email-check password-confirm",
                action: "submit->email-check#validateBeforeSubmit submit->password-confirm#validateBeforeSubmit"
              },
              class: "space-y-6"
            }) do |f| %>

        <!-- 이름 -->
        <div>
          <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, autofocus: true, placeholder: "홍길동",
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition placeholder-gray-400 text-gray-900 bg-white py-3 px-3" %>
        </div>

        <!-- 이메일 + 중복확인 -->
        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="flex items-center space-x-2">
            <%= f.email_field :email,
                placeholder: "you@example.com",
                data: {
                  "email-check-target": "email",
                  action: "input->email-check#resetChecked"
                },
                class: "flex-grow border border-gray-300 rounded-lg py-3 px-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition placeholder-gray-400 text-gray-900 bg-white" %>

            <button type="button"
              data-action="click->email-check#checkEmail"
              data-email-check-target="checkButton"
              class="flex-shrink-0 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 whitespace-nowrap transition">
              중복확인
            </button>
          </div>
          <p data-email-check-target="message" class="text-sm mt-1 hidden"></p>
        </div>

        <!-- 비밀번호 -->
        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "8자 이상 입력",
                data: {
                  "password-confirm-target": "password",
                  action: "input->password-confirm#checkMatch"
                },
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition placeholder-gray-400 text-gray-900 bg-white py-3 px-3" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mt-1">최소 <%= @minimum_password_length %>자 이상</p>
          <% end %>
        </div>

        <!-- 비밀번호 확인 -->
        <div>
          <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "비밀번호 재입력",
                data: {
                  "password-confirm-target": "passwordConfirmation",
                  action: "input->password-confirm#checkMatch"
                },
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition placeholder-gray-400 text-gray-900 bg-white py-3 px-3" %>
          <p data-password-confirm-target="message" class="text-sm mt-1 text-red-500 hidden">
            비밀번호가 일치하지 않습니다.
          </p>
        </div>

        <!-- 에러 메시지 표시 -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- 약관 동의 -->
        <div class="flex items-start">
          <%= f.check_box :terms, required: true, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded mt-0.5" %>
          <label class="ml-2 text-sm text-gray-700">
            <%= link_to "이용약관", "#", class: "text-blue-600 hover:underline" %> 및
            <%= link_to "개인정보처리방침", "#", class: "text-blue-600 hover:underline" %>에 동의합니다. <span class="text-red-500">*</span>
          </label>
        </div>

        <!-- 가입 버튼 -->
        <div class="mt-6">
          <%= f.submit "회원가입",
                class: "w-full py-3 bg-gradient-to-r from-indigo-600 to-green-500 text-white rounded-lg font-semibold hover:opacity-90 transition cursor-pointer" %>
        </div>

      <% end %>

      <!-- 로그인 링크 -->
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          이미 계정이 있으신가요?
          <%= link_to "로그인", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>

    </div>
  </div>
</main>