<!-- app/views/users/registrations/edit.html.erb -->
<main class="min-h-screen bg-gradient-to-b from-indigo-50 to-white py-20 px-4">
  <div class="w-full max-w-md mx-auto bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 to-green-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white text-center">회원정보 수정</h2>
      <p class="text-blue-100 text-center mt-2 text-sm">계정 정보를 업데이트하세요</p>
    </div>

    <div class="px-8 py-8">
      <%= render 'shared/form_wrapper',
          form_model: resource,
          form_url: registration_path(resource_name),
          form_html: { method: :put, class: "space-y-6" } do |f| %>

        <div class="mb-4">
          <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, placeholder: "홍길동" %>
        </div>

        <div class="mb-4">
          <%= f.label :company_name, "회사명", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :company_name, placeholder: "회사명 입력" %>
        </div>

        <div class="mb-4">
          <%= f.label :phone, "전화번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.telephone_field :phone, placeholder: "010-1234-5678" %>
        </div>

        <div class="mb-4">
          <%= f.label :country, "국가/지역", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :country, placeholder: "대한민국" %>
        </div>

        <div class="mb-4">
          <%= f.label :email, "이메일 (변경 불가)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, disabled: true, class: "#{f.object.class.name.downcase}_email disabled:bg-gray-100" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, "새 비밀번호 (입력 시 변경)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "새 비밀번호 입력" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "새 비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "새 비밀번호 재입력" %>
        </div>

        <div class="mb-4">
          <%= f.label :current_password, "현재 비밀번호 (확인을 위해 필수)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "현재 비밀번호 입력", required: true %>
        </div>

        <div class="mt-6">
          <%= f.submit "정보 수정" %>
        </div>

      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          계정 삭제를 원하시면
          <%= link_to "여기", registration_path(resource_name), method: :delete, data: { confirm: "정말 계정을 삭제하시겠습니까?" }, class: "font-medium text-red-600 hover:text-red-500" %>
        </p>
      </div>
    </div>
  </div>
</main>