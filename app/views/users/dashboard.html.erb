<div class="min-h-screen bg-gray-50 px-4 py-10">
  <div class="max-w-7xl mx-auto bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-3xl font-bold text-indigo-700 mb-6">내 정보</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <p class="text-sm text-gray-500">이름</p>
        <p class="text-lg text-gray-900"><%= @user.name %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500">이메일</p>
        <p class="text-lg text-gray-900"><%= @user.email %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500">회사명</p>
        <p class="text-lg text-gray-900"><%= @user.company_name %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500">전화번호</p>
        <p class="text-lg text-gray-900"><%= @user.phone %></p>
      </div>
    </div>

    <div class="mt-8">
      <%= link_to "내 주문 보기", my_orders_path, class: "inline-block bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition" %>
    </div>
  </div>
</div>