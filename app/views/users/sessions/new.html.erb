<main class="min-h-screen bg-gradient-to-b from-blue-50 to-white flex items-center justify-center py-16 px-4">
  <div class="w-full max-w-md">

    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">

      <!-- Header -->
     <div class="bg-blue-600 px-6 py-5">
        <div class="flex items-center justify-center mb-2">
          <i data-lucide="log-in" class="w-8 h-8 text-white"></i>
        </div>
        <h2 class="text-2xl font-bold text-white text-center">로그인</h2>
        <p class="text-blue-100 text-center mt-1 text-sm">
          안전한 SSL 인증서 관리 시스템
        </p>
      </div>

      <div class="px-6 py-4">

        <!-- Social Login -->
        <div class="mt-4">
          <% if devise_mapping.omniauthable? %>
            <% resource_class.omniauth_providers.each do |provider| %>
              <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "w-full flex items-center justify-center px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 transition" do %>
                <svg class="w-5 h-5" viewBox="0 0 48 48">
                  <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path>
                  <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path>
                  <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.223,0-9.657-3.657-11.303-8H6.306C9.656,39.663,16.318,44,24,44z"></path>
                  <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571l6.19,5.238C42.021,35.596,44,30.138,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path>
                </svg>
                <span class="ml-3 text-sm font-medium text-gray-700">Google 계정으로 로그인</span>
              <% end %>
            <% end %>
          <% end %>
        </div>

        <!-- Divider -->
        <div class="mt-4">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-white text-gray-500">또는</span>
            </div>
          </div>
        </div>

      </div>

      <!-- Flash Messages -->
      <% if notice %>
        <div class="mx-6 mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
          <p class="text-sm text-blue-800"><%= notice %></p>
        </div>
      <% end %>
      <% if alert %>
        <div class="mx-6 mt-4 p-3 bg-red-50 border border-red-200 rounded-lg flex items-center">
          <i data-lucide="alert-circle" class="w-5 h-5 text-red-500 mr-2"></i>
          <p class="text-sm text-red-800"><%= alert %></p>
        </div>
      <% end %>

      <!-- Login Form -->
      <div class="px-6 py-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

          <!-- Email -->
          <div>
            <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@email.com",
                class: "block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900" %>
          </div>

          <!-- Password -->
          <div>
            <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••",
                class: "block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900" %>
          </div>

          <!-- Remember + Forgot -->
          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <%= f.label :remember_me, "로그인 유지", class: "ml-2 text-sm text-gray-700" %>
              </div>
            <% end %>

            <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "text-sm font-medium text-blue-600 hover:text-blue-700" %>
          </div>

          <!-- Submit -->
          <%= f.submit "로그인",
          class: "w-full py-3 bg-blue-600 
              text-white text-base font-semibold rounded-lg hover:bg-blue-700 
              transition shadow-md cursor-pointer" %>

        <% end %>

        <!-- Sign Up Link -->
        <div class="mt-4 text-center">
          <p class="text-sm text-gray-600">
            계정이 없으신가요?
            <%= link_to "회원가입", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-700" %>
          </p>
        </div>

        <!-- Security Badge -->
        <div class="mt-4 text-center">
          <div class="inline-flex items-center px-4 py-2 bg-white rounded-lg shadow-sm border border-gray-200">
            <i data-lucide="shield-check" class="w-5 h-5 text-green-600 mr-2"></i>
            <span class="text-sm text-gray-600">256비트 SSL 암호화로 보호됨</span>
          </div>
        </div>

      </div>
    </div>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    lucide.createIcons();
  });
  
  document.addEventListener('turbo:load', () => {
    lucide.createIcons();
  });
</script>