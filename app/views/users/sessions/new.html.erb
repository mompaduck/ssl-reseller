<%# app/views/users/sessions/new.html.erb %>
<div class="flex justify-center items-center min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 to-green-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white text-center">로그인</h2>
      <p class="text-blue-100 text-center mt-2 text-sm">안전한 SSL 인증서 관리 시스템</p>
    </div>

    <% if notice %>
      <div class="mx-8 mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-sm text-blue-800"><%= notice %></p>
      </div>
    <% end %>

    <% if alert %>
      <div class="mx-8 mt-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-sm text-red-800"><%= alert %></p>
      </div>
    <% end %>

    <div class="px-8 py-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="flex justify-between items-center">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 rounded" %>
              <%= f.label :remember_me, "로그인 상태 유지", class: "ml-2 text-sm text-gray-700" %>
            </div>
          <% end %>
          <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "text-sm text-blue-600 hover:underline" %>
        </div>

        <%= f.submit "로그인", class: "w-full py-3 px-4 bg-gradient-to-r from-blue-600 to-green-600 text-white font-medium rounded-lg hover:opacity-90 transition" %>
      <% end %>

      <div class="mt-6 text-center text-sm text-gray-600">
        계정이 없으신가요?
        <%= link_to "회원가입", new_registration_path(resource_name), class: "text-blue-600 font-semibold hover:underline" %>
      </div>
    </div>
  </div>
</div>