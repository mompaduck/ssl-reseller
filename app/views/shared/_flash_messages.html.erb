<%# app/views/shared/_flash_messages.html.erb %>

<%# Flash 메시지 컨테이너 %>
<div class="flash-messages-container">
  
  <% if notice.present? %>
    <div class="animate-slide-down mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4"
         data-controller="auto-dismiss"
         data-auto-dismiss-delay-value="5000">
      <div class="rounded-lg bg-green-50 border border-green-200 p-4 shadow-sm">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="text-sm font-medium text-green-800"><%= notice %></p>
          </div>
          <div class="ml-auto pl-3">
            <button type="button" 
                    data-action="click->auto-dismiss#dismiss"
                    class="inline-flex rounded-md bg-green-50 p-1.5 text-green-500 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-offset-2">
              <span class="sr-only">닫기</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="animate-slide-down mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4"
         data-controller="auto-dismiss"
         data-auto-dismiss-delay-value="7000">
      <div class="rounded-lg bg-red-50 border border-red-200 p-4 shadow-sm">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="text-sm font-medium text-red-800"><%= alert %></p>
          </div>
          <div class="ml-auto pl-3">
            <button type="button" 
                    data-action="click->auto-dismiss#dismiss"
                    class="inline-flex rounded-md bg-red-50 p-1.5 text-red-500 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-offset-2">
              <span class="sr-only">닫기</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a1 1 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>

<style>
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-slide-down {
    animation: slideDown 0.3s ease-out;
  }
</style>