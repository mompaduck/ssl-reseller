<main class="min-h-screen bg-gradient-to-b from-indigo-50 to-white py-6">
  <div class="max-w-7xl mx-auto px-6">
    
    <!-- 헤더 -->
    <header class="text-center mb-6">
      <h1 class="text-4xl font-extrabold text-gray-900">
        SSL 인증서 상품
      </h1>
      <p class="mt-2 text-gray-600 text-base">
        글로벌 인증기관의 다양한 SSL 인증서를 CertGate를 통해 손쉽게 신청하세요.
      </p>
    </header>

    <% active_products = @products.where(is_active: true) %>

   <!-- ===== FILTER SECTION ===== -->
<div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm mb-8">

  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">

    <!-- ===== 상품 종류 ===== -->
    <div class="flex-1 min-w-0">
      <h3 class="text-sm font-semibold text-gray-700 mb-2">상품 종류</h3>

      <div class="flex flex-wrap gap-2">

        <% categories = {
          "single" => "Single Domain SSL",
          "wildcard" => "Wildcard SSL",
          "multi" => "Multi Domain SSL",
          "ov" => "OV 인증서"
        } %>

        <% all_active = params[:category].blank? %>

        <!-- 전체 버튼 -->
        <%= link_to products_path(provider: params[:provider]),
            class: "
              h-10 px-4 flex items-center justify-center rounded-lg text-sm font-medium whitespace-nowrap transition
              #{all_active ? 'bg-green-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}
            " do %>
          전체
        <% end %>

        <% categories.each do |key, label| %>
          <% active = params[:category] == key %>

          <%= link_to products_path(category: key, provider: params[:provider]),
              class: "
                h-10 px-4 flex items-center justify-center rounded-lg text-sm font-medium whitespace-nowrap transition
                #{active ? 'bg-green-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}
              " do %>
            <%= label %>
          <% end %>
        <% end %>

      </div>
    </div>

    <!-- ===== 인증기관 (CA) ===== -->
    <div>
      <h3 class="text-sm font-semibold text-gray-700 mb-2">인증기관 (CA)</h3>

      <%= form_with url: products_path, method: :get, local: true do |f| %>
        <div class="flex items-center gap-3">

          <%= f.select :provider,
              [
                ["전체", ""],
                ["Sectigo", "Sectigo"],
                ["Comodo", "Comodo"],
                ["DigiCert", "DigiCert"],
                ["RapidSSL", "RapidSSL"],
                ["Certum", "Certum"],
                ["Thawte", "Thawte"],
                ["GeoTrust", "GeoTrust"]
              ],
              { selected: params[:provider] },
              class: "w-36 h-10 px-3 border border-gray-300 rounded-lg bg-white text-gray-700 text-sm
                      focus:border-indigo-500 focus:ring-indigo-500 transition" %>

          <%# 유지하도록 category 전달 %>
          <%= f.hidden_field :category, value: params[:category] if params[:category].present? %>

          <%= f.submit "적용",
              class: "h-10 px-5 rounded-lg bg-indigo-600 text-white text-sm font-semibold 
                     shadow hover:bg-indigo-700 transition" %>
        </div>
      <% end %>
    </div>

  </div>
</div>

    <% if active_products.blank? %>
      <div class="bg-white border border-gray-200 rounded-2xl p-10 text-center text-gray-500 shadow-sm">
        등록된 인증서 상품이 없습니다.
      </div>
    <% else %>

      <!-- ===== PRODUCT GRID ===== -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <% active_products.each do |product| %>
          <div class="relative bg-white rounded-2xl shadow-md hover:shadow-lg transition 
                      border border-gray-100 flex flex-col">

            <% if product.discount.to_i > 0 %>
              <span class="absolute -top-2 -right-2 bg-gradient-to-r from-indigo-600 to-green-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow">
                <%= product.discount.to_i %>% 할인
              </span>
              
            <% end %>

            <!-- 카드 본문 -->
            <div class="p-6 flex-1 flex flex-col">
              <div class="mb-3">
                <p class="text-xs font-semibold text-green-600 uppercase tracking-wider">
                  <%= product.provider %>
                </p>
                <h3 class="text-xl font-bold text-gray-900 mt-1"><%= product.name %></h3>
                <p class="text-xs text-gray-400 mt-1">코드: <%= product.product_code %></p>
              </div>

              <dl class="space-y-2 text-sm text-gray-700 mt-auto">
                <div class="flex justify-between">
                  <dt class="text-gray-500">기간</dt>
                  <dd class="font-semibold text-gray-900"><%= product.duration_months %>개월</dd>
                </div>

                <div class="flex justify-between">
                  <dt class="text-gray-500">도메인</dt>
                  <dd class="font-semibold text-gray-900"><%= product.domain_count %>개</dd>
                </div>

                <% if product.liability_usd.present? %>
                  <div class="flex justify-between">
                    <dt class="text-gray-500">배상 책임</dt>
                    <dd class="font-semibold text-gray-900"><%= number_with_delimiter(product.liability_usd) %> USD</dd>
                  </div>
                <% end %>
              </dl>
            </div>

            <!-- 하단 -->
            <div class="border-t border-gray-100 px-6 py-4 bg-gradient-to-r from-indigo-50 to-green-50 
                        rounded-b-2xl flex items-center justify-between">
              <div>
                <p class="text-xs text-gray-500 mb-1">시작가 (VAT 별도)</p>
                <p class="text-xl font-extrabold text-indigo-700">
                  <%= number_to_currency(product.price, unit: "₩", precision: 0, format: "%u%n") %>
                </p>
              </div>

              <div class="flex gap-2">
                <%= link_to "상세보기", product_path(product),
                    class: "px-3 py-2 text-xs font-medium rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition" %>
                <%= link_to "주문하기", new_order_path(product_id: product.id),
                    class: "px-4 py-2 text-xs font-semibold rounded-lg bg-gradient-to-r from-indigo-600 to-green-500 text-white hover:opacity-90 shadow-sm transition" %>
              </div>
            </div>

          </div>
        <% end %>

      </div>
    <% end %>

  </div>
</main>