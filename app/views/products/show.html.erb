<%# app/views/products/show.html.erb %>

<main class="min-h-screen bg-gradient-to-b from-indigo-50 to-white py-16">
  <div class="max-w-4xl mx-auto px-6">
    <!-- 상품 헤더 -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900">
        <%= @product.name %>
      </h1>
      <p class="mt-3 text-sm text-gray-600">
        <%= @product.provider %> 브랜드 · 코드: <span class="font-medium text-gray-800"><%= @product.product_code %></span>
      </p>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
      <div class="p-8">
        <!-- 로고 + 기본 설명 -->
        <div class="flex items-center mb-6 space-x-6">
          <% if @product.logo_url.present? %>
            <img src="<%= @product.logo_url %>" alt="<%= @product.provider %> 로고" class="h-16 w-auto object-contain">
          <% end %>
          <div>
            <p class="text-sm text-gray-500">기간: <%= @product.duration_months %>개월</p>
            <p class="text-sm text-gray-500">도메인 수: 최대 <%= @product.domain_count %>개</p>
          </div>
        </div>

        <!-- 주요 설명 -->
        <div class="mb-8">
          <p class="text-base text-gray-700 leading-relaxed">
            <%= simple_format(@product.description) %>
          </p>
        </div>

        <!-- 특징 및 스펙 -->
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">주요 특징</h2>
          <p class="text-sm text-gray-600 leading-relaxed whitespace-pre-line">
            <%= @product.features %>
          </p>
        </div>

        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">스펙 한눈에 보기</h2>
          <dl class="space-y-3 text-sm text-gray-700">
            <div class="flex justify-between">
              <dt class="text-gray-500">배상 책임</dt>
              <dd class="font-medium text-gray-900">최대 <%= number_with_delimiter(@product.liability_usd) %> USD</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">인증 유형</dt>
              <dd class="font-medium text-gray-900"><%= @product.validation_type %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">인증서 타입</dt>
              <dd class="font-medium text-gray-900"><%= @product.cert_type %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">멀티연도 지원</dt>
              <dd class="font-medium text-gray-900"><%= @product.multi_year_support? ? "지원" : "미지원" %></dd>
            </div>
          </dl>
        </div>

        <!-- 가격 및 주문 버튼 -->
        <div class="pt-6 border-t border-gray-200 flex flex-col md:flex-row items-center justify-between gap-4">
          <div>
            <p class="text-sm text-gray-500">시작가 (VAT 별도)</p>
            <p class="text-3xl font-extrabold text-indigo-700">
              <%= number_to_currency(@product.price, unit: "₩", precision: 0, format: "%u%n") %>
            </p>
            <% if @product.discount.present? && @product.discount > 0 %>
              <p class="text-sm text-green-600 font-medium">
                <%= @product.discount %>% 할인
              </p>
            <% end %>
          </div>
          <div class="flex gap-2">
            <%= link_to "주문하기", new_order_path(product_id: @product.id),
                        class: "px-5 py-3 text-base font-semibold rounded-lg bg-gradient-to-r from-indigo-600 to-green-500 text-white hover:opacity-90 shadow" %>
            <%= link_to "공식 사이트", @product.brand_site_url, target: "_blank",
                        class: "px-4 py-3 text-base font-medium rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>