<%# app/views/products/show.html.erb %>
<main class="min-h-screen bg-gradient-to-b from-blue-50 to-white py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <%# 뒤로가기 버튼 %>
    <div class="mb-6">
      <%= link_to products_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-blue-600 transition" do %>
        <i data-lucide="arrow-left" class="w-5 h-5 mr-1"></i>
        상품 목록으로 돌아가기
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <%# 왼쪽: 상품 정보 (2/3) %>
      <div class="lg:col-span-2 space-y-6">
        
        <%# 상품 헤더 %>
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <% if @product.provider.present? %>
                <p class="text-sm font-semibold text-blue-600 uppercase tracking-wider mb-2">
                  <%= @product.provider %>
                </p>
              <% end %>
              <h1 class="text-3xl font-bold text-gray-900 mb-2">
                <%= @product.name %>
              </h1>
              <% if @product.product_code.present? %>
                <p class="text-sm text-gray-500">상품코드: <%= @product.product_code %></p>
              <% end %>
            </div>
            
            <%# 할인 배지 %>
            <% if @product.respond_to?(:discount) && @product.discount.to_i > 0 %>
              <span class="bg-gradient-to-r from-red-500 to-pink-500 text-white text-sm font-bold px-4 py-2 rounded-full shadow-lg">
                <%= @product.discount.to_i %>% 할인
              </span>
            <% end %>
          </div>

          <%# 한 줄 요약 %>
          <% if @product.description.present? %>
            <p class="text-gray-700 text-base leading-relaxed">
              <%= @product.description %>
            </p>
          <% end %>
        </div>

        <%# 주요 특징 %>
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <i data-lucide="check-circle" class="w-6 h-6 mr-2 text-blue-600"></i>
            주요 특징
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%# 검증 유형 %>
            <% if @product.respond_to?(:validation_type) && @product.validation_type.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="shield-check" class="w-6 h-6 text-blue-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">검증 수준</h3>
                  <p class="text-gray-600 text-sm">
                    <span class="font-medium text-blue-600"><%= @product.validation_type %></span>
                    <% case @product.validation_type %>
                    <% when 'DV' %>
                      - 도메인 검증
                    <% when 'OV' %>
                      - 기관 검증
                    <% when 'EV' %>
                      - 확장 검증
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>

            <%# 발급 기간 %>
            <% if @product.duration_months.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="calendar" class="w-6 h-6 text-green-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">유효 기간</h3>
                  <p class="text-gray-600 text-sm">
                    <% years = @product.duration_months.to_i / 12.0 %>
                    <% if years >= 1 && (years % 1).zero? %>
                      <span class="font-medium text-green-600"><%= years.to_i %>년</span>
                    <% else %>
                      <span class="font-medium text-green-600"><%= @product.duration_months %>개월</span>
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>

            <%# 도메인 수 %>
            <% if @product.respond_to?(:domain_count) && @product.domain_count.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="globe" class="w-6 h-6 text-purple-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">보호 도메인</h3>
                  <p class="text-gray-600 text-sm">
                    <% if @product.domain_count == 1 %>
                      <span class="font-medium text-purple-600">단일 도메인</span>
                    <% elsif @product.domain_count.to_i > 1 %>
                      <span class="font-medium text-purple-600">최대 <%= @product.domain_count %>개</span>
                    <% else %>
                      <span class="font-medium text-purple-600">제한 없음</span>
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>

            <%# 배상 책임 %>
            <% if @product.liability_usd.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="dollar-sign" class="w-6 h-6 text-yellow-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">배상 책임</h3>
                  <p class="text-gray-600 text-sm">
                    최대 <span class="font-medium text-yellow-600">$<%= number_with_delimiter(@product.liability_usd) %></span>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <%# 상세 설명 %>
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">상세 정보</h2>
          
          <div class="prose max-w-none text-gray-700">
            <% if @product.description.present? %>
              <%= simple_format(@product.description) %>
            <% else %>
              <p class="text-gray-500 italic">상세 정보가 등록되지 않았습니다.</p>
            <% end %>

            <%# 추가 설명이 있다면 %>
            <% if @product.respond_to?(:features) && @product.features.present? %>
              <h3 class="text-lg font-semibold text-gray-900 mt-6 mb-3">포함 기능</h3>
              <ul class="space-y-2">
                <% @product.features.split("\n").each do |feature| %>
                  <li class="flex items-start">
                    <i data-lucide="check" class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0"></i>
                    <%= feature %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
        </div>
      </div>

      <%# 오른쪽: 주문 카드 (1/3) - Sticky %>
      <div class="lg:col-span-1">
        <div class="sticky top-8">
          <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden">
            
            <%# 가격 표시 %>
            <div class="bg-blue-600 p-6 text-white">
              <p class="text-sm font-medium text-blue-100 mb-2">시작 가격 (VAT 별도)</p>
              <% if @product.selling_price.present? %>
                <div class="flex items-baseline">
                  <span class="text-4xl font-extrabold">
                    <%= number_with_delimiter(@product.final_price.to_i) %>
                  </span>
                  <span class="text-xl ml-2">원</span>
                </div>
                
                <% if @product.duration_months.present? %>
                  <% years = @product.duration_months.to_i / 12.0 %>
                  <p class="text-sm text-blue-100 mt-2">
                    / <%= years >= 1 && (years % 1).zero? ? "#{years.to_i}년" : "#{@product.duration_months}개월" %>
                  </p>
                <% end %>
              <% else %>
                <p class="text-2xl font-bold">가격 문의</p>
              <% end %>
            </div>

            <%# 주문 버튼 %>
            <div class="p-6 space-y-4">
              <%= link_to new_order_path(product_id: @product.id),
                    class: "block w-full py-4 bg-blue-600 text-white text-center font-bold rounded-xl hover:bg-blue-700 shadow-lg hover:shadow-xl transition transform hover:-translate-y-0.5" do %>
                <span class="flex items-center justify-center">
                  <i data-lucide="shopping-cart" class="w-5 h-5 mr-2"></i>
                  지금 주문하기
                </span>
              <% end %>

              <%= link_to support_path,
                    class: "block w-full py-3 border-2 border-gray-300 text-gray-700 text-center font-semibold rounded-xl hover:bg-gray-50 transition" do %>
                <span class="flex items-center justify-center">
                  <i data-lucide="message-circle" class="w-5 h-5 mr-2"></i>
                  문의하기
                </span>
              <% end %>
            </div>

            <%# 보안 배지 %>
            <div class="border-t border-gray-100 p-6 bg-gray-50">
              <div class="flex items-center justify-center space-x-4 text-sm text-gray-600">
                <div class="flex items-center">
                  <i data-lucide="shield-check" class="w-5 h-5 text-green-500 mr-1"></i>
                  안전한 결제
                </div>
                <div class="flex items-center">
                  <i data-lucide="zap" class="w-5 h-5 text-blue-500 mr-1"></i>
                  빠른 발급
                </div>
              </div>
            </div>
          </div>

          <%# 추가 정보 카드 %>
          <div class="mt-6 bg-blue-50 border border-blue-200 rounded-xl p-4">
            <div class="flex items-start">
              <i data-lucide="info" class="w-5 h-5 text-blue-600 mr-3 mt-0.5 flex-shrink-0"></i>
              <div class="text-sm text-blue-900">
                <p class="font-semibold mb-1">도움이 필요하신가요?</p>
                <p class="text-blue-700">
                  인증서 선택에 어려움이 있으시면 전문가 상담을 받아보세요.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    lucide.createIcons();
  });
  
  document.addEventListener('turbo:load', () => {
    lucide.createIcons();
  });
</script>