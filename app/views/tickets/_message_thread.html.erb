<% messages.order(:created_at).each do |message| %>
  <div class="bg-white shadow rounded-lg p-4 border border-gray-200">
    <div class="flex items-start gap-3">
      <%# Avatar %>
      <div class="flex-shrink-0">
        <% if message.user&.admin? %>
          <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
            <i data-lucide="headset" class="w-5 h-5 text-blue-600"></i>
          </div>
        <% else %>
          <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
            <i data-lucide="user" class="w-5 h-5 text-gray-600"></i>
          </div>
        <% end %>
      </div>

      <%# Message Content %>
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-1">
          <span class="font-semibold text-gray-900">
            <% if message.user&.admin? %>
              지원팀
            <% elsif message.user %>
              <%= message.user.email %>
            <% else %>
              고객
            <% end %>
          </span>
          <span class="text-xs text-gray-500">
            <%= time_ago_in_words(message.created_at) %> 전
          </span>
          <% if message.user&.admin? %>
            <span class="px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-700">
              관리자
            </span>
          <% end %>
        </div>
        <div class="prose prose-sm max-w-none text-gray-700">
          <%= message.content %>
        </div>
        
        <%# Attachments if any %>
        <% if message.attachments.any? %>
          <div class="mt-3 flex flex-wrap gap-2">
            <% message.attachments.each do |attachment| %>
              <a href="<%= rails_blob_path(attachment.file, disposition: "attachment") %>" 
                 class="inline-flex items-center gap-1 px-3 py-1 bg-gray-50 border border-gray-200 rounded text-sm text-gray-700 hover:bg-gray-100 transition">
                <i data-lucide="paperclip" class="w-3 h-3"></i>
                <%= attachment.filename %>
              </a>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<script>
  // Initialize Lucide icons
  if (typeof lucide !== 'undefined') {
    lucide.createIcons();
  }
</script>
