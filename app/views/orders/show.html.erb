<!-- app/views/orders/show.html.erb -->
<main class="min-h-screen bg-gradient-to-b from-blue-50 to-white py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <%# 뒤로가기 버튼 %>
    <div class="mb-6">
      <%= link_to my_orders_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-blue-600 transition" do %>
        <i data-lucide="arrow-left" class="w-5 h-5 mr-1"></i>
        주문 목록으로 돌아가기
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <%# 왼쪽: 주문 정보 (2/3) %>
      <div class="lg:col-span-2 space-y-6">
        
        <%# 주문 헤더 %>
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <p class="text-sm font-semibold text-blue-600 uppercase tracking-wider mb-2">
                주문번호 <%= @order.internal_order_id || "##{@order.id}" %>
              </p>
              <h1 class="text-3xl font-bold text-gray-900 mb-2">
                <%= @order.domain %>
              </h1>
              <p class="text-sm text-gray-500">
                <%= @order.created_at.strftime("%Y년 %m월 %d일 주문") %>
              </p>
            </div>
            
            <%# 상태 배지 %>
            <% case @order.status %>
            <% when 'pending' %>
              <span class="bg-yellow-100 text-yellow-800 text-sm font-bold px-4 py-2 rounded-full">
                결제 대기 중
              </span>
            <% when 'paid' %>
              <span class="bg-green-100 text-green-800 text-sm font-bold px-4 py-2 rounded-full">
                결제 완료
              </span>
            <% when 'issued' %>
              <span class="bg-blue-100 text-blue-800 text-sm font-bold px-4 py-2 rounded-full">
                발급 완료
              </span>
            <% when 'canceled' %>
              <span class="bg-red-100 text-red-800 text-sm font-bold px-4 py-2 rounded-full">
                취소됨
              </span>
            <% when 'refunded' %>
              <span class="bg-gray-100 text-gray-800 text-sm font-bold px-4 py-2 rounded-full">
                환불됨
              </span>
            <% end %>
          </div>
        </div>

        <%# 주문 상세 정보 %>
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <i data-lucide="file-text" class="w-6 h-6 mr-2 text-blue-600"></i>
            주문 상세 정보
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%# 인증서 타입 %>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                <i data-lucide="shield-check" class="w-6 h-6 text-blue-600"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">인증서 타입</h3>
                <p class="text-gray-600 text-sm">
                  <span class="font-medium text-blue-600"><%= @order.certificate_type.upcase %></span>
                  <% case @order.certificate_type %>
                  <% when 'dv' %>
                    - 도메인 검증
                  <% when 'ov' %>
                    - 기관 검증
                  <% when 'ev' %>
                    - 확장 검증
                  <% end %>
                </p>
              </div>
            </div>

            <%# 도메인 %>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                <i data-lucide="globe" class="w-6 h-6 text-green-600"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">도메인</h3>
                <p class="text-gray-600 text-sm font-medium">
                  <%= @order.domain %>
                </p>
              </div>
            </div>

            <%# 신청자 정보 %>
            <% if @order.name.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="user" class="w-6 h-6 text-purple-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">신청자</h3>
                  <p class="text-gray-600 text-sm">
                    <%= @order.name %>
                    <% if @order.english_name.present? %>
                      (<%= @order.english_name %>)
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>

            <%# 회사명 %>
            <% if @order.company_name.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="building" class="w-6 h-6 text-indigo-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">회사명</h3>
                  <p class="text-gray-600 text-sm"><%= @order.company_name %></p>
                </div>
              </div>
            <% end %>

            <%# 연락처 %>
            <% if @order.phone.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="phone" class="w-6 h-6 text-yellow-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">연락처</h3>
                  <p class="text-gray-600 text-sm"><%= @order.phone %></p>
                </div>
              </div>
            <% end %>

            <%# 주소 %>
            <% if @order.company_address.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="map-pin" class="w-6 h-6 text-pink-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">주소</h3>
                  <p class="text-gray-600 text-sm"><%= @order.company_address %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <%# 인증서 정보 (발급된 경우) %>
        <% if @order.certificate.present? %>
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <i data-lucide="award" class="w-6 h-6 mr-2 text-blue-600"></i>
              인증서 정보
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="calendar" class="w-6 h-6 text-green-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">발급일</h3>
                  <p class="text-gray-600 text-sm">
                    <%= @order.certificate.issued_at&.strftime("%Y년 %m월 %d일") || "발급 대기 중" %>
                  </p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex-shrink-0 w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mr-4">
                  <i data-lucide="calendar-x" class="w-6 h-6 text-red-600"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">만료일</h3>
                  <p class="text-gray-600 text-sm">
                    <%= @order.certificate.expires_at&.strftime("%Y년 %m월 %d일") || "-" %>
                  </p>
                </div>
              </div>

              <% if @order.certificate.serial_number.present? %>
                <div class="flex items-start md:col-span-2">
                  <div class="flex-shrink-0 w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                    <i data-lucide="hash" class="w-6 h-6 text-purple-600"></i>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 mb-1">시리얼 번호</h3>
                    <p class="text-gray-600 text-sm font-mono"><%= @order.certificate.serial_number %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <%# 오른쪽: 결제 정보 카드 (1/3) - Sticky %>
      <div class="lg:col-span-1">
        <div class="sticky top-8">
          <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden">
            
            <%# 가격 표시 %>
            <div class="bg-blue-600 p-6 text-white">
              <p class="text-sm font-medium text-blue-100 mb-2">주문 금액</p>
              <div class="flex items-baseline">
                <span class="text-4xl font-extrabold">
                  <%= number_with_delimiter(@order.total_price || 0) %>
                </span>
                <span class="text-xl ml-2">원</span>
              </div>
              <p class="text-sm text-blue-100 mt-2">VAT 별도</p>
            </div>

            <%# 액션 버튼 %>
            <div class="p-6 space-y-4">
              <% if @order.status == 'pending' %>
                <%= link_to pay_order_path(@order), method: :post,
                      class: "block w-full py-4 bg-blue-600 text-white text-center font-bold rounded-xl hover:bg-blue-700 shadow-lg hover:shadow-xl transition transform hover:-translate-y-0.5" do %>
                  <span class="flex items-center justify-center">
                    <i data-lucide="credit-card" class="w-5 h-5 mr-2"></i>
                    결제하기
                  </span>
                <% end %>
              <% elsif @order.status == 'issued' && @order.certificate.present? %>
                <button class="block w-full py-4 bg-green-600 text-white text-center font-bold rounded-xl hover:bg-green-700 shadow-lg hover:shadow-xl transition">
                  <span class="flex items-center justify-center">
                    <i data-lucide="download" class="w-5 h-5 mr-2"></i>
                    인증서 다운로드
                  </span>
                </button>
              <% end %>

              <%= link_to support_path,
                    class: "block w-full py-3 border-2 border-gray-300 text-gray-700 text-center font-semibold rounded-xl hover:bg-gray-50 transition" do %>
                <span class="flex items-center justify-center">
                  <i data-lucide="message-circle" class="w-5 h-5 mr-2"></i>
                  문의하기
                </span>
              <% end %>
            </div>

            <%# 진행 상태 %>
            <div class="border-t border-gray-100 p-6 bg-gray-50">
              <h3 class="font-semibold text-gray-900 mb-4">진행 상태</h3>
              <div class="space-y-3">
                <div class="flex items-center text-sm">
                  <i data-lucide="check-circle" class="w-5 h-5 text-green-500 mr-2"></i>
                  <span class="text-gray-700">주문 접수</span>
                </div>
                <div class="flex items-center text-sm <%= @order.status.in?(['paid', 'issued']) ? 'text-gray-700' : 'text-gray-400' %>">
                  <i data-lucide="<%= @order.status.in?(['paid', 'issued']) ? 'check-circle' : 'circle' %>" class="w-5 h-5 <%= @order.status.in?(['paid', 'issued']) ? 'text-green-500' : 'text-gray-300' %> mr-2"></i>
                  결제 완료
                </div>
                <div class="flex items-center text-sm <%= @order.status == 'issued' ? 'text-gray-700' : 'text-gray-400' %>">
                  <i data-lucide="<%= @order.status == 'issued' ? 'check-circle' : 'circle' %>" class="w-5 h-5 <%= @order.status == 'issued' ? 'text-green-500' : 'text-gray-300' %> mr-2"></i>
                  인증서 발급
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    lucide.createIcons();
  });
  
  document.addEventListener('turbo:load', () => {
    lucide.createIcons();
  });
</script>